generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Property {
  id String @id @default(cuid())

  title       String
  description String

  quartier    String
  adresse     String
  price       String
  rooms       String
  floors      String
  caution     String
  postal_code String
  city        String

  imageUrl String

  sold Boolean

  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt

  Contact Contact[]
}

model Contact {
  id         String  @id @default(cuid())
  email      String
  name       String
  phone      String?
  message    String?
  propertyId String?

  property Property? @relation(fields: [propertyId], references: [id])
}
